// ESTA LA PROPIEDAD DENTRO DEL OBJETO?

var usuarios = [
  {
  nombre:'Gaston',
  online:true
  },
{
  nombre:'Robert',
  online:false
}];


function estaOffline(usuarios,nombre) {
  const listofresults = usuarios.filter(usuario => usuario.nombre == nombre);
  console.log(listofresults);
  const fish = listofresults[0].online;
  return fish;
}


function estaOffline(usuarios,nombre) {
  let users = {};
  usuarios.map((usuario) => (users[usuario.nombre] = usuario.online))
  return users[nombre]
}


