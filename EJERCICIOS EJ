//RANGO DE NUMEROS

function rangeOfNumbers(startNum, endNum) {
  if (endNum < startNum) {
      return [];
    } else {
      const num = rangeOfNumbers(startNum,endNum-1);
      num.push(endNum);
      return num;
    }
  };

  
//------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

//SUMA TODOS LOS IMPARES

function sumaTodosImpares(array) {
  return array.reduce((acc,elemento) => (elemento % 2 !== 0 ? acc + elemento : acc),0);
}

